# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{ts,tsx,js,jsx,html,htm,css,scss,less}]
indent_size = 2

[*.ts]
quote_type = single

[*.{json,xml,yml}]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false
